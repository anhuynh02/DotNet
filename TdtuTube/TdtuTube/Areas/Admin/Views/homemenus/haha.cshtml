@model  IEnumerable<TdtuTube.Models.HomeMenu>

@{
    ViewBag.Title = "Quản lý menu trang chủ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Hiện thị</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.id</td>
                <td>@menu.name</td>
                @if (menu.hide == true)
                {
                    <td>Hiển thị</td>
                }
                else
                {
                    <td>Không hiển thị</td>
                }
                <td><a href="#">Chỉnh sửa</a></td>
            </tr>
        }
    </tbody>
</table>

