@model TdtuTube.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - TdtuTude</title>
    <link rel="stylesheet" href="~/Content/login.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div id="register-form" class="center"">
        <a href="@Session["ReturnURL"]"><i class="material-icons text-white cursor-pointer back-home-page">keyboard_arrow_left</i></a>
        <h1 style="position: relative">Register</h1>
        @using (Html.BeginForm("PostSignUp", "Register", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="txt_field">
                @Html.TextBoxFor(u => u.email, new { @required = "required", @type = "email", @placeholder = " " })
                <span></span>
                @Html.Label("Email")

            </div>
            <div class="txt_field">
                @Html.TextBoxFor(u => u.name, new { @required = "required", @placeholder = " " })
                <span></span>
                @Html.Label("Name")
            </div>
            <div class="txt_field">
                @Html.PasswordFor(u => u.password, new { @required = "required", @placeholder = " ", @id = "signupPw", @onkeyup = "checkPass()" })
                <span></span>
                @Html.Label("Password")

            </div>
            <div class="txt_field">
                <input type="password" onkeyup="checkPass()" required placeholder=" " id="signupCfPw" />
                <span></span>
                <label>Re-Enter Password</label>
            </div>
            <div class="error-login-massage" style="color:red">
                @TempData["registerEmailError"]
            </div>
            <input id="signupBtn" type="submit" value="Sign Up" hidden>
            <div class="signup_link">
                Have account <a href="/login">Login here !!</a>
            </div>

        }
    </div>

    <script>

        function checkPass() {
            let a = document.getElementById("signupCfPw")
            let pw = document.getElementById("signupPw").value
            let signupBtn = document.getElementById("signupBtn")
            if (a.value == pw && a.value != "" && pw != "") {
                signupBtn.hidden = false
            } else {
                signupBtn.hidden = true
            }

        }
    </script>
</body>
</html>
