@model IEnumerable<TdtuTube.Models.PlaylistContent>
    @using TdtuTube.Libs
    <div id="watch-video" onload="display_sidebar()">
        <div id="notification-wrapper"></div>
        <div class="watch-video_grid">
            <div class="watch-video_grid-left" style="padding-top: 13px">

                <div class="video-play">
                    <video controls autoplay>
                        <source src="@Model.FirstOrDefault().Video.path" type="video/mp4">

                        Your browser does not support the video tag.
                    </video>
                </div>
                <div class="playlist-panel">
                    <div id="pl-header" class="playlist-header" style="color: white; position: relative">
                        <div class="header-content">
                            <div class="header-top-row">
                                <div class="header-description">
                                    <h3 id="pl-title-open" style="font-size: 20px;">
                                        <span>
                                            @Model.FirstOrDefault().Playlist.name
                                        </span>

                                    </h3>
                                    <h3 id="pl-title-close" style="font-size: 14px;" hidden>
                                        Tên bài tiếp theo
                                    </h3>
                                    <div class="publisher-container">
                                        <span id="ps-close" style="color:#a3c7cc !important" hidden>@Model.FirstOrDefault().Playlist.name</span>
                                        <span id="ps-open">TdtuTube</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <span onclick="closePlaylist(this)" class="close-playlist-btn">
                            <i class="material-icons text-gray-400 md-21">close</i>
                        </span>

                    </div>
                    <div id="items">
                        @foreach (var i in Model)
                        {
                            <div class="playlist-items">
                                <div href="#" id="wc-endpoint">
                                    <div class="playlist-item-container">
                                        <div class="pl-thumbnail-container">
                                            <div class="pl-thumbnails">
                                                <a href="#" class="pl-thumbnail">
                                                    <img src="@i.Video.thumbnail" alt="">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="playlist-meta">
                                            <h4>
                                                @i.Video.title
                                            </h4>
                                            <div class="byline-container">
                                                <span class="byline">
                                                    @i.Video.User.name
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="video-content">
                    <div class="video-content-heading">
                        <h1 style="font-size: 2rem;">@Model.FirstOrDefault().Video.title</h1>
                        <div id="channel-row">
                            <div id="owner">
                                <div class="owner-info">
                                    <a href="/channel/@Model.FirstOrDefault().Video.User.meta" class="owner-img">
                                        <img src="@Model.FirstOrDefault().Video.User.avatar_path" alt="">
                                    </a>
                                    <div class="owner-name-follow">
                                        <div class="owner-name">
                                            <a href="/channel/@Model.FirstOrDefault().Video.User.meta" title="@Model.FirstOrDefault().Video.User.name">@Model.FirstOrDefault().Video.User.name</a>
                                        </div>
                                        <div class="owner-follow">
                                            @VideoFormat.readableNumber((int)Model.FirstOrDefault().Video.User.subscriber_count) người đăng ký
                                        </div>
                                    </div>
                                    <div class="sub-btn">
                                        <div class="font-btn">
                                            @if (Session["UserID"] == null)
                                            {
                                                <a href="/login"><button class="btn-subscribe">Đăng kí</button></a>
                                            }
                                            else
                                            {
                                                if ((int)Session["UserID"] != Model.FirstOrDefault().Video.User.id)
                                                {
                                                    Html.RenderAction("getSubscribe", "Button", new { ownerId = Model.FirstOrDefault().Video.User.id });
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="like-btn">
                                        <div id="likeContainer" class="font-btn">
                                            @if (Session["UserID"] == null)
                                            {
                                                <a href="/login">
                                                    <button class="btn-action">
                                                        <i class="material-icons-outlined text-white md-18 icon-margin">thumb_up</i>
                                                        @VideoFormat.readableNumber((int)@Model.FirstOrDefault().Video.like_count)
                                                    </button>
                                                </a>
                                            }
                                            else
                                            {
                                                Html.RenderAction("getLike", "Button", new { videoId = Model.FirstOrDefault().Video.id });
                                            }
                                        </div>
                                    </div>
                                    <div class="playlist-btn">
                                        <div class="font-btn">
                                            @if (Session["UserID"] == null)
                                            {
                                                <a href="/login">
                                                    <button class="btn-action">
                                                        <i class="material-icons-outlined text-white md-21 icon-margin">playlist_add</i>
                                                        Lưu
                                                    </button>
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn-action">
                                                    <i class="material-icons-outlined text-white md-21 icon-margin">playlist_add</i>
                                                    Lưu
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="video-content-description">
                                <div class="video-content-description-view">
                                    <span>@VideoFormat.readableNumber((int)Model.FirstOrDefault().Video.view_count) lượt xem</span>
                                    <span>@VideoFormat.dateAgo((DateTime)Model.FirstOrDefault().Video.datebegin)</span>
                                </div>
                                <p>@Model.FirstOrDefault().Video.description</p>
                            </div>
                        </div>
                    </div>

                    <div class="reload-comment">

                    </div>
                    <div class="video-comment">
                        <div class="video-content-comment">
                            <div class="video-content-comment__number">@Model.FirstOrDefault().Video.comment_count bình luận</div>
                            <div class="video-content-comment__post">
                                <!-- Check session image. -->
                                @{
                                    if (Session["UserID"] != null)
                                    {
                                        <img class="image-profile" src="@Session["UserAvatarPath"]" alt="IMAGE">
                                        <div class="video-content-comment__form">
                                            <input class="video-content-comment__video" type="hidden" name="video-id">
                                            <input class="video-content-comment__input" type="text" name="comment" placeholder="Viết bình luận...">
                                            <div class="video-content-comment__line"></div>
                                            <button class="btn-comment" type="submit" disabled>Bình luận</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="image-profile" src="~/Uploads/Avatars/Default.png" alt="IMAGE">
                                        <div class="video-content-comment__form">
                                            <input class="video-content-comment__video" type="hidden" name="video-id">
                                            <input class="video-content-comment__input" type="text" name="comment" placeholder="Viết bình luận..." onclick="location.href='/login'">
                                            <div class="video-content-comment__line"></div>
                                            <button class="btn-comment" type="submit" disabled>Bình luận</button>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="video-content-comment__list">
                            @foreach (var i in Model.FirstOrDefault().Video.Comments)
                            {
                                <div class="video-content-comment__item">
                                    <img class="image-profile" src="@i.User.avatar_path" alt="IMAGE">
                                    <div class="video-content-comment__item-heading">
                                        <div>
                                            <span>@i.User.name</span>
                                            <span>@VideoFormat.dateAgo((DateTime)i.datebegin)</span>
                                        </div>
                                        <p>@i.content</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
            @{Html.RenderAction("getVideos", "Watch", new { videoId = Model.FirstOrDefault().Video.id, tagId = Model.FirstOrDefault().Video.tag_id });}
        </div>
    </div>


